<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_movies"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/video_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="?attr/colorPrimary"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/play_buttom"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/play_buttom_ctd"
            android:src="@drawable/ic_play_circle_outline_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trailer_text"
                android:textColor="@color/textPrimaryColor"
                tools:text="@string/trailer_text"/>

            <TextView
                android:id="@+id/video_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_text_title"
                android:textColor="@color/textPrimaryColor"
                tools:text="@string/label_text_title"/>

            <TextView
                android:id="@+id/video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_size_text"
                android:textColor="@color/textPrimaryColor"
                tools:text="@string/video_size_text"/>

            <TextView
                android:id="@+id/video_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error_text"
                android:textColor="@color/colorPrimaryDark"
                tools:text="@string/error_text"/>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
